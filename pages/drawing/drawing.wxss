/* pages/drawing/drawing.wxss */
.box{
  margin:120rpx 120rpx 0 120rpx;
  background-color:#f5f5f5;
  height:60vh;
  border-radius:10px;
  display:flex;
  flex-direction:column;
  align-items:center;
}
.title{
  font-size:38rpx;
  color:#E32F1E;
  margin:65rpx auto 10rpx auto;
}
.line{
  background-color:#D2D2D2;
  height:3rpx;
  margin:10rpx auto;
  width:200rpx;
}
.bt{
  background:radial-gradient(circle,#E32F1D 30%,#F46249 50%,#FFD2D2 75%,white 100%);
  width:180rpx;
  height:180rpx;
  border-radius:40rem;
  color:white;
  border:none;
  font-size:38rpx;
  text-align:center;
  line-height:180rpx;
  margin:200rpx 180rpx 0 180rpx;
}
.share{
  height:80rpx;
  width:300rpx;
  background:radial-gradient(#E32F1D 30%,#F46249 60%,#FFD2D2 100%);
  border-radius:20rem;
  color:white;
  border:none;
  font-size:38rpx;
  text-align:center;
  margin:70rpx 230rpx 0 230rpx;
}