<!--pages/home/index.wxml-->
<!-- 背景图 -->
<view class="bgc"></view>
<image class="navbarbgc" src="../../images/homeImg/bgc.png"></image>
<view class="statusBar" style="height:{{statusBarHeight}}px;"></view>
<view class="navbar" style="height:44px;">首页</view>
<image class="icon1" src="../../images/homeImg/volleyball.png"></image>
<!-- 轮播图 -->
<view class="navbgc">
  <swiper autoplay indicator-dots circular="true">
    <swiper-item>
      <image mode="widthFix" src="../../images/homeImg/1.png"></image>
    </swiper-item>
    <swiper-item>
      <image mode="widthFix" src="../../images/homeImg/2.png"></image>
    </swiper-item>
    <swiper-item>
      <image mode="widthFix" src="../../images/homeImg/3.png"></image>
    </swiper-item>
    <swiper-item>
      <image mode="widthFix" src="../../images/homeImg/4.png"></image>
    </swiper-item>
    <swiper-item>
      <image mode="widthFix" src="../../images/homeImg/5.png"></image>
    </swiper-item>
  </swiper>
</view>

<view class="main">
  <navigator class="major" url="/pages/ssCompetition/ssCompetition">
    <image class="saishi" src="../../images/homeImg/game.png">
      <view class="txt">三水赛事</view>
    </image>
  </navigator>

  <view class="main1">
    <navigator class="main11" bindtap="teachtap">
      <image class="jiaoxue" src="../../images/homeImg/teach.png">
        <view class="txt">排球教学</view>
      </image>
    </navigator>

    <view class="main12" bindtap="tianbao">
      <image class="luntan" src="../../images/homeImg/forum.png">
        <view class="txt">队伍相关</view>
      </image>
    </view>
  </view>
</view>