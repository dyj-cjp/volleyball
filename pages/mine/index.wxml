    <image class="img" src="../../images/mine/play.png"></image>
    <text>发起的抽签</text>
  </navigator>
  <navigator class="nav_img" url="/pages/work/index">
    <image class="img" src="../../images/mine/work.png"></image>
    <text>参与的抽签</text>
  </navigator>
