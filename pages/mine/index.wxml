<view class="nickbgc">
  <view class="header">
    <view class="authview" wx:if="{{!isauth}}">
      <button catchtap="getauth">未登录</button>
    </view>
    <view wx:else>
      <image class="userinfo-face" src="{{userInfo.avatarUrl}}"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
  </view>
</view>

