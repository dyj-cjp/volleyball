/* pages/tainbao/index.wxss */
page {
  background-color: rgba(0,0,0,.1);
}
.wrap{
  background-color: #fff;
  margin-bottom:30rpx;
}

.item{
  display:flex;
  height:100rpx;
  width:90vw;
  margin:0 auto;
  border-top:1px solid rgba(0,0,0,.1);
  align-items: center;
}
.textbox{
  flex:1.5;
}
.inputbox{
  flex:3;
}
.choose{
  flex:2.6;
}

/* 球队名片 */
.card {
  position: relative;
  width: 688rpx;
  height: 325rpx;
  margin: 32rpx;
}

.duiwuname {
  position: absolute;
  top: 120rpx;
  left: 100rpx;
}

.duiwudetail {
  position: absolute;
  width: 300rpx;
  top: 180rpx;
  left: 100rpx;
  font-size: 18rpx;
}
.duiwudetail textarea{
  height: 150rpx;
  width: 200rpx;
  left: 100rpx;
  top: -20rpx;
}

.logo {
  position: absolute;
  width: 72rpx;
  height: 72rpx;
  top: 100rpx;
  left: 570rpx;
}

.logodetail {
  position: absolute;
  top: 180rpx;
  left: 500rpx;
  text-align: center;
  font-size: 20rpx;
  color: white;
  font-family: STXihei Regular;
}

/* 队长信息 */
.duizhangxinxi {
  display: flex;
  margin:0 auto;
  justify-content: space-between;
  width:90vw;
  padding:50rpx 0;
  align-items: center;
}

.duizhangdetail {
  padding-bottom: 5rpx;
  border-bottom: 5rpx solid red;
}

/* 显示 */
.xinxiadd2 {
  display: flex;
  align-items: center;
}

/* 头像 */
.add2 {
  width: 40rpx;
  height: 40rpx;
  margin-right: 6rpx;
  margin-top: 6rpx;
  vertical-align: middle;
  display:inline-block;
}

.add2txt {
  margin-top:.7vw;
  font-size: 28rpx;
  font-family: STXihei Regular;
  display:inline-block;
}

.show {
