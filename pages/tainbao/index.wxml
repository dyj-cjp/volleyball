<view class="wrap">
  <view class="item">
  <view class="textbox">球队名称</view>
  <view class="inputbox"><input type="text" placeholder="请输入球队名称" bindinput="teamnameinput"/></view>
</view>
<view class="item">
  <view class="textbox">球队简介</view>
  <view class="inputbox"><input type="text" placeholder="请输入球队简介" bindinput="infoinput"/></view>
</view>
<view class="item">
  <view class="textbox">球队学院</view>
  <view class="choose">{{choosevalue}}</view>
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="chossebtn" style="color:rgba(250,99,99)">选择</view>
  </picker>
</view>
</view>

<view class="wrap">
  <view class="duizhangxinxi">
  <view class="duizhangdetail">队长信息</view>
  <view class="xinxiadd2" bindtap="tianjiaxinxi" data-param="{{teamName}}">
    <image class="add2" src="../../images/teamReport/add2.png"></image>
    <text class="add2txt">添加</text>
  </view>
</view>

<!-- 信息显示 -->
<view class="show" wx:if="{{userInfo[0]}}">
  <view>
    <image class="duizhanglogo" src="../../images/teamReport/1.png"></image>
    <view class="zhangdetail">
      <view class="zhangname">{{userInfo[0].name}}</view>
      <view class="zhangnumber">{{userInfo[0].number}}</view>
    </view>
  </view>
</view>
</view>

<view class="wrap">
  <view class="duizhangxinxi">
  <view class="duizhangdetail">队员信息</view>
  <view class="xinxiadd2" bindtap="addnumber" data-param="{{teamName}}">
    <image class="add2" src="../../images/teamReport/add2.png"></image>
    <text class="add2txt">添加</text>
  </view>
</view>

<!-- 信息显示 -->
<view class="show1" wx:for="{{memberArr}}" wx:key="name">
  <view>
    <image class="duiyuanlogo" src="../../images/teamReport/1.png"></image>
    <view class="yuandetail">
      <view class="yuanname">{{item.name}}</view>
      <view class="yuannumber">{{item.number}}</view>
    </view>
  </view>
</view>
</view>


