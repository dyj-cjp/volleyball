<view class="add1" bindtap="addimg" wx:if="{{!teamsrc}}">
  <image class="add1pic" src="../../images/teamReport/add1.png"></image>
  <text class="add1txt">添加球队个性图片</text>
</view>
<view wx:else class="imgshow">
  <image class="" src="{{teamsrc}}"></image>
</view>

<view class="chuanjian" bindtap="tianbao">创建队伍</view>
<view style="height:30rpx;"></view>