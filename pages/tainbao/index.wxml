<!--pages/tainbao/index.wxml-->
<image class="card" src="../../images/teamReport/card.png"></image>
<view class="duiwuname">
<input type="text" value="{{teamName}}" maxlength="8" bindinput="bindKeyInput" placeholder="球队队伍名称"/>
</view>
<view class="duiwudetail">
  <text>球队简介：</text>
  <textarea maxlength="70" auto-height placeholder="介绍一下你的球队吧" bindinput="bindKeyInput"></textarea>
</view>
<image class="logo" src="../../images/teamReport/logo.png"></image>
<view class="logodetail"><input type="text" bindinput="bindKeyInput" maxlength="8" placeholder="球队所在学院名称"/></view>

<view class="duizhangxinxi">
  <view class="duizhangdetail">队长信息</view>
  <view class="xinxiadd2" bindtap="tianjiaxinxi">
    <image class="add2" src="../../images/teamReport/add2.png"></image>
    <text class="add2txt">添加</text>
  </view>
</view>

<!-- 信息显示 -->
<view class="show">
  <view>
    <image class="duizhanglogo" src="../../images/teamReport/1.png"></image>
    <view class="zhangdetail">
      <view class="zhangname">{{userInfo[0].name}}</view>
      <view class="zhangnumber">{{userInfo[0].number}}</view>
    </view>
  </view>
</view>

<view class="duizhangxinxi">
  <view class="duizhangdetail">队员信息</view>
  <view class="xinxiadd2" bindtap="addnumber">
    <image class="add2" src="../../images/teamReport/add2.png"></image>
    <text class="add2txt">添加</text>
  </view>
</view>

<!-- 信息显示 -->
<view class="show1" wx:for="{{memberArr}}" wx:key="name">
  <view>
    <image class="duiyuanlogo" src="../../images/teamReport/1.png"></image>
    <view class="yuandetail">
      <view class="yuanname">{{item.name}}</view>
      <view class="yuannumber">{{item.number}}</view>
    </view>
  </view>
</view>

<view class="teamImg">
  <image src="{{teamsrc}}" mode="aspectFit"></image>
</view> 
<view class="add1" bindtap="addimg">
  <image class="add1pic" src="../../images/teamReport/add1.png"></image>
  <text class="add1txt">添加球队个性图片</text>
</view>

<button type="primary" class="button1" bindtap="createTeam">创建队伍</button>